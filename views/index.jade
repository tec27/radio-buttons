extends layout

block content
  .controls(data-ng-controller='PlayerCtrl')
    .playing-state
      span(data-ng-show='playerState.isPlaying') Playing
      span(data-ng-hide='playerState.isPlaying') Paused
    .buttons
      button(data-ng-disabled='!buttonState.rewind', data-ng-click='rewind()') Rewind
      button(data-ng-disabled='!buttonState.playPause', data-ng-click='playOrPause()') Play/Pause
      button(data-ng-disabled='!buttonState.forward', data-ng-click='forward()') Forward
